# Backend environment variables (example)
# Copy to .env and fill in your real values.

NODE_ENV=development
PORT=5000

# MongoDB connection string
MONGODB_URI=mongodb://127.0.0.1:27017/shopera

# JWT signing secret (generate a long random string for production)
JWT_SECRET=change-me-in-production

# Comma-separated list of allowed frontend origins for CORS
# Example: http://localhost:5173,https://your-frontend.com
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# Optional: used only for server startup logging / documentation
PUBLIC_API_URL=http://localhost:5000

# Google OAuth (server-side)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

